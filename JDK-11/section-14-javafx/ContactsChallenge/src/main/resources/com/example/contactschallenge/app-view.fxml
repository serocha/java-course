<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox fx:id="mainVbox" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.contactschallenge.AppController">
    <MenuBar>
        <Menu text="Contacts">
            <MenuItem text="New Contact" onAction="#showContactDialog"/>
        </Menu>
    </MenuBar>
    <TableView fx:id="contactTable">
        <columns>
            <TableColumn text="First Name" fx:id="firstNameCol"/>
            <TableColumn text="Last Name" fx:id="lastNameCol"/>
            <TableColumn text="Phone Number" fx:id="phoneNumCol"/>
            <TableColumn text="Notes" fx:id="notesCol"/>
        </columns>
    </TableView>
</VBox>
